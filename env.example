# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database?schema=public"
DIRECT_URL="postgresql://username:password@hostname:port/database?schema=public"

# Application Configuration
NODE_ENV="production"
PORT=3000

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# Security Configuration
ALLOWED_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# API Configuration
API_KEY="your-api-key-here"

# Email Configuration (if using email features)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="your-email@gmail.com"

# OAuth Configuration (if using OAuth)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# Application URLs
FRONTEND_URL="https://yourdomain.com"
BACKEND_URL="https://api.yourdomain.com"

# Documentation URLs
DOCS_URL="https://docs.curiopay.com"
GITHUB_REPO_URL="https://github.com/curiopay/curiopay-api"

# Optional: Enable Swagger in production (set to 'true' if needed)
ENABLE_SWAGGER="false"

# Optional: Swagger UI Basic Auth (for production environments)
SWAGGER_USER="admin"
SWAGGER_PASSWORD="your-swagger-password"

# Encryption Configuration
ENCRYPTION_KEY="your-32-character-encryption-key"

# Rate Limiting
RATE_LIMIT_MAX=1000 