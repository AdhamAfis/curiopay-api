<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{title}} - CurioPay</title>
    <link rel='stylesheet' href='assets/styles.css' />
  </head>
  <body>
    <div class='container'>
      <header class='header'>
        <h1>Categories</h1>
      </header>

      <nav class='nav'>
        <a href='index.html'>Overview</a>
        <a href='expenses.html'>Expenses</a>
        <a href='income.html'>Income</a>
        <a href='categories.html'>Categories</a>
        <a href='preferences.html'>Preferences</a>
        <a href='newsletter.html'>Newsletter</a>
      </nav>

      <main>
        <div class='card'>
          <h2>Your Categories</h2>

          {{#if categories.length}}
            <table class='table'>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Color</th>
                  <th>Icon</th>
                  <th>Budget</th>
                  <th>Default</th>
                </tr>
              </thead>
              <tbody>
                {{#each categories}}
                  <tr>
                    <td>{{name}}</td>
                    <td>{{type.name}}</td>
                    <td><span
                        class='badge'
                        style='background-color: {{color}}'
                      >{{color}}</span></td>
                    <td>{{icon}}</td>
                    <td>{{budget}}</td>
                    <td>{{#if isDefault}}Yes{{else}}No{{/if}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          {{else}}
            <p>No categories found.</p>
          {{/if}}
        </div>
      </main>

      <footer class='footer'>
        <p>CurioPay Data Export - User Data</p>
      </footer>
    </div>
  </body>
</html>